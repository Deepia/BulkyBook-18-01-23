@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplyOrder"></label>
            <input asp-for="DisplyOrder" class="form-control"/>
            <span asp-validation-for="DisplyOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-primary btn" style="width:150px;">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn-secondary btn" style="width:150px;">Back to List</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


