@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="continer p-3">
    <div class="row pt-4">
        <div  class="col-6">
            <h2 class="text-primary">category List</h2>
        </div>
        <div  class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
        </div>
    </div>
</div>
<br/>
<table class="table table-borderd table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td width="50%">@item.Name</td>
                <td width="30%">@item.DisplyOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn-primary btn mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn mx-2"><i class="bi bi-trash-fill"></i> &nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

